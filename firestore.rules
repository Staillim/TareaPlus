
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    function isAuth() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      // Allow users to create their own document on signup
      allow create: if isAuth() && request.resource.id == request.auth.uid;
      // Allow users to read their own document
      allow read, update, delete: if isAuth() && request.auth.uid == userId;
      // Allow admins to read/write any user document
      allow read, write: if isAdmin();
      
      // Allow admins to read completion history
      match /completedTasksHistory/{historyId} {
        allow read, write: if isAdmin() || request.auth.uid == userId;
      }
    }
    
    match /tasks/{taskId} {
    	// Allow admins to do anything with tasks
    	allow read, write: if isAdmin();
      // Allow authenticated users to read tasks
      allow read: if isAuth();
    }
    
    match /rewards/{rewardId} {
    	// Allow admins to do anything with rewards
    	allow read, write: if isAdmin();
      // Allow authenticated users to read rewards
      allow read: if isAuth();
    }
  }
}
