
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      // An authenticated user can access their own document
      // An admin can access any user document
      allow read, write: if (request.auth != null && request.auth.uid == userId) || isAdmin();
      
      // A new user can create their own document
      allow create: if request.auth != null;

      // Allow anonymous reads only for referral code validation on documents that have that field.
      allow get: if request.auth == null && "referralCode" in resource.data;

      match /completedTasksHistory/{historyId} {
        allow create: if request.auth != null && request.auth.uid == userId;
      }
    }

    match /tasks/{taskId} {
      // Logged-in users can read tasks
      allow read: if request.auth != null;
      // Admins can write tasks
      allow write: if isAdmin();
    }

    match /rewards/{rewardId} {
      // Logged-in users can read rewards
      allow read: if request.auth != null;
      // Admins can write rewards
      allow write: if isAdmin();
    }
    
    match /referrals/{referralId} {
      // A user can read their own referrals (where they are the referrer)
      allow read: if request.auth != null && resource.data.referrerId == request.auth.uid;
      // An admin can read all referrals
      allow read: if isAdmin();
      // Allow creation of a referral record
      allow create: if request.auth != null;
    }
  }
}
