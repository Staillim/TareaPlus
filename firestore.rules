rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      function isAdmin() {
        return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      }

      allow read, write: if request.auth.uid == userId;
      allow list, write: if isAdmin();
    }

    match /tasks/{taskId} {
      allow read: if request.auth != null;
      allow list, create, update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      
      match /completedBy/{userId} {
        allow create: if request.auth.uid == userId;
      }
    }
    
    match /users/{userId}/completedTasksHistory/{historyId} {
      allow create: if request.auth.uid == userId;
      allow read: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /referrals/{referralId} {
        allow create: if request.auth != null;
        allow list: if request.auth != null;
        allow read: if request.auth.uid == resource.data.referrerId;
    }
    
    match /rewards/{rewardId} {
        allow read: if request.auth != null;
        allow list, create, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
