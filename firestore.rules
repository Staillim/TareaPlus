
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAuth() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return request.auth.token.role == 'admin';
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    match /users/{userId} {
      allow read, write: if isAdmin();
      allow create: if isOwner(userId);
      allow get, update, list: if isOwner(userId);
      
      match /completedTasksHistory/{historyId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
    }

    match /tasks/{taskId} {
      allow read, write: if isAdmin();
      allow list, get: if isAuth();
    }

    match /rewards/{rewardId} {
      allow read, write: if isAdmin();
      allow list, get: if isAuth();
    }

    match /referrals/{referralId} {
      allow read: if isAuth() && resource.data.referrerId == request.auth.uid;
      allow create: if isAuth();
    }

    match /redemptions/{redemptionId} {
      allow create: if isAuth();
      allow list: if isAuth() && request.query.where.size() == 1 && request.query.where[0].field == 'userId' && request.query.where[0].value == request.auth.uid;
      allow read, update: if isAdmin() || (isAuth() && resource.data.userId == request.auth.uid);
    }
  }
}
